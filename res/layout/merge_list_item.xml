<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>

    <TextView
        android:id="@+id/contact_tree_root_seperator"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#aaa"
        android:text=""
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/contact_tree_spacer"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <ImageView
        android:id="@+id/contact_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="4dip"
        android:background="@android:color/darker_gray"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="3dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/contactname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/contactdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:lines="1"
            android:ellipsize="end"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <TextView
        android:id="@+id/button_seperator"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dip"
        android:text=""
        android:background="#f0f0f0"
    />
    
    <TextView
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_check"
        android:visibility="visible"
        android:textSize="48sp"
        android:tag="accept"
        android:textColor="#5E9B00"
        android:paddingTop="2sp"
        android:paddingLeft="2sp"
        android:paddingBottom="2sp"
        android:paddingRight="8dip"
        android:layout_gravity="center_vertical"
    />

    <TextView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_ban"
        android:visibility="visible"
        android:textSize="34sp"
        android:tag="remove"
        android:textColor="#730D00"
        android:paddingTop="2sp"
        android:paddingLeft="2sp"
        android:paddingBottom="2sp"
        android:paddingRight="8dip"
        android:layout_gravity="center_vertical"
    />

    </LinearLayout>
</LinearLayout>